page {
    background-color: #f5f5f5;
}

.block {
    padding: 7px 15px;
    margin: 7px 0;
    background: #fff;
}

.block.user-info {
    padding: 0;
}

.block.user-info > button, .block.user-info > view {
    width: 100%;
    margin: 0;
    padding: 7px 15px;
}

.user-info image {
    width: 60px;
    height: 60px;
    margin-right: 15px;
}

.block button {
    color: #555;
    background: #fff;
    border: 0;
    border-radius: 0;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    padding: 0 10px;
}

.block-btn {
    padding: 0;
}

.block-btn image {
    width: 20px;
    height: 20px;
    margin-right: 10px;
}

.block-btn button {
    position: relative;
    height: 47px;
    padding: 7px 2px;
    margin: 0 12px;
}

.block-btn button:not(:last-child)::before {
    content: "";
    position: absolute;
    top: -0.5px;
    left: 0;
    width: 200%;
    height: 200%;
    border-bottom: 1px solid #ddd;
    transform-origin: 0 0;
    transform: scale(0.5, 0.5);
    box-sizing: border-box;
    z-index: 1;
}
