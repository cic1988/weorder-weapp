page {
    background-color: #f5f5f5;
}

/* 公告栏 */

.zan-noticebar {
    padding: 9px 10px;
    line-height: 1.5;
}

.zan-noticebar view {
    font-size: 12px;
    color: #f60;
    background-color: #fff7cc;
}

/* 搜索栏 */

.search {
    width: 100%;
    padding: 7px 5px;
    background-color: #fff;
}

.search .search-input-wrapper {
    position: relative;
}

.search .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    background-color: transparent;
    border: 0;
    padding: 0;
    padding-right: 3px;
    width: 30px;
    height: 32px;
}

.search .btn image {
    width: 18px;
    height: 18px;
}

.search .btn:after {
    display: none;
}

.search .btn.clear-btn {
    justify-content: flex-end;
    right: 30px;
}

.search .btn.clear-btn image {
    width: 10px;
    height: 10px;
    padding: 2px;
    background-color: #ccc;
    border-radius: 50%;
}

.search .btn.search-btn {
    right: 0;
}

